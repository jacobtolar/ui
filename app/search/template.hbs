<div class="row">
  {{#if session.isAuthenticated}}
    {{collections-flyout
      class="col-md-2"}}
    {{search-list
      pipelines=pipelines
      collections=collections
      query=query
      class="col-md-10"
      onAddToCollection=(action 'addToCollection')
    }}
  {{else}}
    {{search-list
      pipelines=pipelines
      collections=collections
      query=query
      name=name
      description=description
      errorMessage=errorMessage
      onAddToCollection=(action 'addToCollection')
    }}
  {{/if}}
</div>

{{outlet}}
